@page 
@model RepconWeb.LoginModel
@{
	ViewData["Title"] = "Login";
}

<form method="post">

	<div class="card" style="width: 24rem;">

		<div class="card-body">
			<h4 class="card-title">Авторизация</h4>


			<div>@Html.Raw(@Model.ResultMessage)</div>

			<div class="form-group">
				<label for="loginInput">Логин</label>
				<input type="text" class="form-control" name="login" id="loginInput" aria-describedby="emailHelp" required>
			</div>

			<div class="form-group">
				<label for="pwdInput">Пароль</label>
				<input type="password" class="form-control" name="password" id="pwdInput" required>
			</div>

			<div>
				<a class="card-link" href="/">Восстановить пароль</a>
			</div>

			<input type="submit" class="btn btn-primary" value="Вход" style="float:right" />
		</div>
	</div>

</form>