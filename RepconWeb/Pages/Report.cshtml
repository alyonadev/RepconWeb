@page
@model RepconWeb.Pages.ReportModel
@{
    ViewData["Title"] = "Report";
}

<h3>Report</h3>

<div class="text-right">
    <button type="button" class="btn btn-outline-success" data-toggle="modal">Export</button>
</div>

<div id="piechart" class="chart" style="margin-left:15%; width:1000px; height:500px"></div>
<div id="chart_div" style="margin-left:10%; width: 900px; height: 500px;"></div>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = google.visualization.arrayToDataTable([
            ['Task', 'Hours per Day'],
            ['Work', 11],
            ['Eat', 2],
            ['Commute', 2],
            ['Watch TV', 2],
            ['Sleep', 7]
        ]);
    
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));

        chart.draw(data);
    }
</script>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load("current", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ['Dinosaur', 'Length'],
            ['Acrocanthosaurus (top-spined lizard)', 12.2],
            ['Albertosaurus (Alberta lizard)', 9.1]]);

        var chart = new google.visualization.Histogram(document.getElementById('chart_div'));
        chart.draw(data);
    }
</script>